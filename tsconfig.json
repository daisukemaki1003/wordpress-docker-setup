{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./theme",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "theme/**/*",
        "src/js"
    ]
}